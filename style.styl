html, body
  height 100%
  width 100%
  margin 0
  padding 0
body
  background #333
  font-family 'Poppins', sans-serif
  color #EEE
  overflow-x hidden
  overflow-y scroll
  #background
    position fixed
    top 0
    bottom 0
    left 0
    right 0
    background-image url('./../img/background.jpg')
    background-size cover
    background-repeat no-repeat;
    background-position 50% 50%;
    background-attachment fixed;
    transition 0.4s filter linear
  .panel
    width 600px
    margin 0 auto
    opacity 1
    position relative
    background green
  #name
    text-align center
    height 100%
    width 100%
    display flex
    flex-direction column
    justify-content center
    h1
      font-size 4em
      font-weight 300
      text-shadow: rgba(0,0,0,.2) 2px 6px 5px,rgba(255,255,255,.4) 0 -4px 30px
      #title
        opacity 0.7
        white-space nowrap
        overflow hidden
        display inline-block
        vertical-align bottom
        &.animate
          animation slide-out 0.4s linear
          max-width 400px
        &.animated
          animation slide-in 0.4s linear
          max-width 0px
    #navigation
      font-weight 300
      width 100%
      text-align center
      position absolute
      bottom 10px
      color rgba(238, 238, 238, 0.7)
      animation fadein 5s
      #jump
        cursor pointer
        position relative
        span
          z-index 2
          position relative
        a
          height 30px
          position absolute
          opacity 0
          transform-origin left
          text-decoration none
          color rgba(238, 238, 238, 1)
          transition all 0.4s
          transform translateX(-65px)
          font-weight bold
          z-index 1

        &:hover
          a
            opacity 1
            for num in (1..4)
              &:nth-of-type({num})
                transform translateX(-65px) rotate(-(num*3)deg) translateY(-(num*28)px)
  #timeline
    #line
      position absolute
      left 0
      right 450px
      #track
        width 4px
        background rgba(238, 238, 238, 0.7)
        border-radius 2px
        position absolute
        top 0
        bottom 0
        right 10px
        z-index 1
      ul#dates
        list-style-type none
        margin 0
        padding 0 30px 0 0
        li
          width 120px
          box-sizing border-box
          text-transform uppercase
          font-size 0.8em
          text-align right
          line-height 60px
          height 60px
          color rgba(238, 238, 238, 0.7)
          transition padding-right 0.4s
          cursor pointer
          &::after
            content ""
            display block
            width 9px
            height 9px
            border 2px solid #EEE
            border-radius 6.5px
            position relative
            left 131.5px
            top -36.5px
            z-index 2
            transition transform 0.4s
            cursor pointer
        li.life::after
          background #FF5722
        li.career::after
          background #4CAF50
        li.academic::after
          background #03A9F4
        li.selected
          padding-right 6.5px
          &::after
            transform scale(2)
    #event
      position absolute
      left 165px
      right 0px
      width 435px
      color rgba(238, 238, 238, 0.7)
      opacity 0
      transition opacity 0.4s
      h4
        margin -4.5px 0 0px 0
        padding 0
        font-size 0.7em
      h2
        margin 0
        padding 0
        color #FF5722
        font-size 1.2em
      span
        display block
        margin 1px 0 0 0
        font-size 0.9em
      h2.life
        color #FF5722
      h2.career
        color #4CAF50
      h2.academic
        color #03A9F4
    .visible
      opacity 1 !important
  #projects
    box-sizing border-box
    width 80%
    padding 10px 0px
    color rgba(238, 238, 238, 0.7)
    @media (max-width: 600px)
      width 100%
    h2
      text-align center
      font-weight 400
      font-size 1.7em
      margin 0
      padding 0
    div#subheader
      min-width 355px
      margin 0px auto
      padding 0px 10px
      @media (min-width: 824px) and (max-width: 1223px)
        width 580px
      @media (min-width: 1224px) and (max-width: 1623px)
        width 880px
      @media (min-width: 1624px) and (max-width: 2023px)
        width 1180px
      span#filter
        font-size 0.8em
        float right
        a
          margin 0 0 0 5px
          padding 0px 5px
          border-radius 4px
          transition padding 0.4s, background 0.4s, margin 0.4s, color 0.4s, border 0.4s
          cursor pointer
          &.selected
            color #333
            background rgba(238, 238, 238, 0.7)
          &:hover
            background rgba(238, 238, 238, 0.2)
      span#count
        font-size 0.8em
    div#grid
      width 100%
      text-align center
      margin 0px auto
      div
        box-sizing border-box
        padding 10px
        position relative
        display inline-block
        height 200px
        width 300px
        border 1px solid rgba(238, 238, 238, 0.7)
        margin 10px
        border-radius 5px
        img
          position absolute
          top 0
          bottom 0
          left 0
          right 0
          height 198px
          width 298px
          border-radius 4px
          user-drag none
          transition filter 0.4s
          z-index 1
        h3, p, a
          margin 0
          padding 0
          position relative
          opacity 0
          transition opacity 0.4s
          z-index 2
          width 280px
        h3
          font-weight normal
          height 40px
        p
          height 102px
          font-size 0.8em
          text-align left
          overflow hidden
        a
          font-size 0.9em
          display inline-block
          margin 5px
          text-decoration none
          width 125px
          color rgba(238, 238, 238, 0.7)
          border 1px solid rgba(238, 238, 238, 0.7)
          border-radius 5px
          &:hover
            background rgba(238, 238, 238, 0.2)
        &:hover
          img
            filter blur(5px) brightness(.3)
          h3, p, a
            opacity 1
  #skills
    height 600px
    div#legend
      position absolute
      top 200px
      left 230px
      height 200px
      width 140px
      h3
        font-weight normal
        font-size 1.6em
        text-align center
        margin 3px 3px 3px 10px
      h5
        font-weight normal
        font-size 0.9em
        margin 3px 3px 3px 20px
        div.patch
          margin-right 5px
          background green
          height 0.7em
          width 0.7em
          border-radius 3px
          display inline-block
    div#tags
      width 600px
      height 600px
      div
        height 300px
        position absolute
        width 31px
        left 284.5px
        top 0
        transform-origin bottom center
        span
          position absolute
          left 0
          top 0
          padding 3px 3px 3px 10px
          height 25px
          white-space nowrap
          transform translateY(100px) rotate(-90deg)
          transform-origin top left
          color rgb(238, 238, 238)
        for num in (1..48)
          &:nth-of-type({num})
            transform rotate((num*7.5)deg)
            span
              if num >= 1 and num <= 13
                background rgba(255, 87, 34, 1)
              if num >= 14 and num <= 27
                background rgba(76, 175, 80, 1)
              if num >= 28 and num <= 38
                background rgba(3, 169, 244, 1)
              if num >= 39 and num <= 48
                background rgba(156, 39, 176, 1)
  #contact
    width 100%
    padding 10px 0px
    text-align center
    div#form
      margin 105px auto
      border-radius 10px
      border 1px solid rgba(238, 238, 238, 0.7)
      cursor pointer
      width 200px
      height 50px
      line-height 50px
      transition all 0.4s
      &:hover
        background rgba(238, 238, 238, 0.2)
      &.selected
        cursor auto
        width calc(100% - 20px)
        max-width 400px
        height 200px
        margin 30px auto
        background rgba(238, 238, 238, 0.2)
      input, textarea
        font-family 'Poppins', sans-serif
        color rgba(238, 238, 238, 0.7)
        display block
        background transparent
        width 100%
        border none
        font-size 1em
        margin 0px
        padding 5px 10px
        outline none
        box-sizing border-box
        resize none
      input
        border-top-left-radius 9px
        border-top-right-radius 9px
        border-bottom 1px solid rgba(238, 238, 238, 0.7)
      textarea
        height 122px
      div
        border-top 1px solid rgba(238, 238, 238, 0.7)
        height 40px
        line-height 40px
        border-bottom-left-radius 9px
        border-bottom-right-radius 9px
        transition all 0.4s
        cursor pointer
        &:hover
          background rgba(238, 238, 238, 0.7)
          color #333
      div, input, textarea
        animation: fadein 0.4s;
    img
      width 32px
      height 32px
      opacity 0.7
      transition opacity 0.4s, filter 0.4s
      margin 30px 30px
      &:hover
        opacity: 0.9
        filter: brightness(2) drop-shadow(0px 0px 3px black);
    span#footer
      display block
      margin 70px auto 0px auto
      font-size 0.7em
      color rgba(238, 238, 238, 0.7)

@keyframes slide-out
  from
    max-width 0px
  to
    max-width 400px

@keyframes slide-in
  from
    max-width 400px
  to
    max-width 0px


@keyframes fadein
  from
    opacity 0
  to
    opacity 1

.blur
  filter blur(5px) brightness(.4)
