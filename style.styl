html, body
  height 100%
  width 100%
  margin 0
  padding 0
body
  background #333
  font-family 'Poppins', sans-serif
  color #EEE
  overflow-x hidden
  overflow-y scroll
  #background
    position fixed
    top 0
    bottom 0
    left 0
    right 0
    background-image url('./../img/background.jpg')
    background-size cover
    background-repeat no-repeat;
    background-position 50% 50%;
    background-attachment fixed;
    transition 0.4s filter linear
  section
    width 600px
    margin 0 auto
    opacity 1
    position relative
  #name
    text-align center
    height 100%
    width 100%
    display flex
    flex-direction column
    justify-content center
    h1
      font-size 7vw
      font-weight 300
      text-shadow: rgba(0,0,0,.2) 2px 6px 5px,rgba(255,255,255,.4) 0 -4px 30px
      #title
        opacity 0.7
        white-space nowrap
        overflow hidden
        display inline-block
        vertical-align bottom
        &.animate
          animation slide-out 0.4s linear
          max-width 100vw
        &.animated
          animation slide-in 0.4s linear
          max-width 0px
    #navigation
      font-weight 300
      width 100%
      text-align center
      position absolute
      bottom 10px
      color rgba(238, 238, 238, 0.7)
      animation fadein 5s
      #jump
        cursor pointer
        position relative
        span
          z-index 2
          position relative
        a
          height 30px
          position absolute
          opacity 0
          transform-origin left
          text-decoration none
          color rgba(238, 238, 238, 1)
          transition all 0.4s
          transform translateX(-65px)
          font-weight bold
          z-index 1

        &:hover
          a
            opacity 1
            for num in (1..4)
              &:nth-of-type({num})
                transform translateX(-65px) rotate(-(num*3)deg) translateY(-(num*28)px)
  #timeline
    width 100%
    max-width 600px
    color rgba(238, 238, 238, 0.7)
    #track
      width 4px
      background rgba(238, 238, 238, 0.7)
      border-radius 2px
      position absolute
      top 0
      bottom 0
      left 140px
      z-index 1
      @media (max-width 600px)
        left 20px
    ul
      list-style-type none
      margin 0
      padding 0
      li
        height 60px
        position relative
        &::before
          content ""
          display block
          width 9px
          height 9px
          border 2px solid #EEE
          border-radius 6.5px
          position absolute
          left 135.5px
          top 22px
          z-index 2
          transition transform 0.4s
          cursor pointer
        div.left
          box-sizing border-box
          display inline-block
          width 120px
          line-height 60px
          text-transform uppercase
          vertical-align top
          font-size 0.8em
          text-align right
          transition padding-right 0.4s
          cursor pointer
        div.right
          box-sizing border-box
          padding-left 50px
          padding-right 10px
          display inline-block
          width calc(100% - 120px)
          opacity 0
          transition opacity 0.4s
          h4
            margin -4.5px 0 0px 0
            padding 0
            font-size 0.7em
          h2
            margin 0
            padding 0
            font-size 1.2em
          p
            margin 1px 0 0 0
            font-size 0.9em
        &.life
          &::before
            background #FF5722
          div.right
            h2
              color #FF5722
            h4::after
              content "Life Event"
        &.career
          &::before
            background #4CAF50
          div.right
            h2
              color #4CAF50
            h4::after
              content "Career Event"
        &.academic
          &::before
            background #03A9F4
          div.right
            h2
              color #03A9F4
            h4::after
              content "Academic Event"
        &.selected
          &::before
            transform scale(1.5)
          div.left
            padding-right 6.5px
          div.right
            opacity 1 !important
        &:last-child
          height auto
        @media (max-width 600px)
          &::before
            left 15.5px
          div.left
            opacity 0
            transition opacity 0.4s
            display block
            padding 0
            position absolute
            right 10px
            top -6px
            height auto
            line-height normal
          div.right
            width 100%
          &.selected
            div.left
              opacity 1 !important
              padding 0px
  #projects
    box-sizing border-box
    width 80%
    padding 10px 0px
    color rgba(238, 238, 238, 0.7)
    @media (max-width: 600px)
      width 100%
    h2
      text-align center
      font-weight 400
      font-size 1.7em
      margin 0
      padding 0
    div#subheader
      min-width 355px
      margin 0px auto
      padding 0px 10px
      @media (min-width: 824px) and (max-width: 1223px)
        width 580px
      @media (min-width: 1224px) and (max-width: 1623px)
        width 880px
      @media (min-width: 1624px) and (max-width: 2023px)
        width 1180px
      span#filter
        font-size 0.8em
        float right
        a
          margin 0 0 0 5px
          padding 0px 5px
          border-radius 4px
          transition padding 0.4s, background 0.4s, margin 0.4s, color 0.4s, border 0.4s
          cursor pointer
          &.selected
            color #333
            background rgba(238, 238, 238, 0.7)
          &:hover
            background rgba(238, 238, 238, 0.2)
      span#count
        font-size 0.8em
    div#grid
      width 100%
      text-align center
      margin 0px auto
      div
        box-sizing border-box
        padding 10px
        position relative
        display inline-block
        height 200px
        width 300px
        border 1px solid rgba(238, 238, 238, 0.7)
        margin 10px
        border-radius 5px
        img
          position absolute
          top 0
          bottom 0
          left 0
          right 0
          height 198px
          width 298px
          border-radius 4px
          user-drag none
          transition filter 0.4s
          z-index 1
        h3, p, a
          margin 0
          padding 0
          position relative
          opacity 0
          transition opacity 0.4s
          z-index 2
          width 280px
        h3
          font-weight normal
          height 40px
        p
          height 102px
          font-size 0.8em
          text-align left
          overflow hidden
        a
          font-size 0.9em
          display inline-block
          margin 5px
          text-decoration none
          width 125px
          color rgba(238, 238, 238, 0.7)
          border 1px solid rgba(238, 238, 238, 0.7)
          border-radius 5px
          &:hover
            background rgba(238, 238, 238, 0.2)
        &:hover
          img
            filter blur(5px) brightness(.3)
          h3, p, a
            opacity 1
  #skills
    height 100vw
    width 100vw
    div#legend
      position absolute
      top calc(50% - 80px)
      left calc(50% - 70px)
      height 160px
      width 140px
      h3
        font-weight normal
        font-size 1.6em
        text-align center
        margin 3px 3px 3px 10px
      h5
        font-weight normal
        font-size 0.9em
        margin 3px 3px 3px 20px
        div.patch
          margin-right 5px
          background green
          height 0.7em
          width 0.7em
          border-radius 3px
          display inline-block
    div#tags
      width 100%
      height 100%
      div
        height 50vw
        width 5vw
        left calc(50% - 2.5vw)
        position absolute
        top 0
        transform-origin bottom center
        span
          font-size 2vw
          padding 0.5vw 0.5vw 0.5vw 2vw
          transform translateY(20vw) rotate(-90deg)
          height 3.6vw
          position absolute
          left 0
          top 0
          white-space nowrap
          transform-origin top left
          color rgb(238, 238, 238)
        for num in (1..48)
          &:nth-of-type({num})
            transform rotate((num*7.5)deg)
            span
              if num >= 1 and num <= 13
                background rgba(255, 87, 34, 1)
              if num >= 14 and num <= 27
                background rgba(76, 175, 80, 1)
              if num >= 28 and num <= 38
                background rgba(3, 169, 244, 1)
              if num >= 39 and num <= 48
                background rgba(156, 39, 176, 1)
    @media (min-width: 600px)
      height 600px
      width 600px
      div#tags
        div
          height 300px
          width 30px
          left calc(50% - 15px)
          span
            font-size 12px
            padding 3px 3px 3px 12px
            transform translateY(120px) rotate(-90deg)
            height 21.6px
  #contact
    width 100%
    padding 50px 0px 10px 0px
    text-align center
    div#form
      margin 105px auto
      border-radius 10px
      border 1px solid rgba(238, 238, 238, 0.7)
      cursor pointer
      width 200px
      height 50px
      line-height 50px
      transition all 0.4s
      &:hover
        background rgba(238, 238, 238, 0.2)
      &.selected
        cursor auto
        width calc(100% - 20px)
        max-width 400px
        height 200px
        margin 30px auto
        background rgba(238, 238, 238, 0.2)
      input, textarea
        font-family 'Poppins', sans-serif
        color rgba(238, 238, 238, 0.7)
        display block
        background transparent
        width 100%
        border none
        font-size 1em
        margin 0px
        padding 5px 10px
        outline none
        box-sizing border-box
        resize none
      input
        border-top-left-radius 9px
        border-top-right-radius 9px
        border-bottom 1px solid rgba(238, 238, 238, 0.7)
      textarea
        height 122px
      div
        border-top 1px solid rgba(238, 238, 238, 0.7)
        height 40px
        line-height 40px
        border-bottom-left-radius 9px
        border-bottom-right-radius 9px
        transition all 0.4s
        cursor pointer
        &:hover
          background rgba(238, 238, 238, 0.7)
          color #333
      div, input, textarea
        animation: fadein 0.4s;
    img
      width 32px
      height 32px
      opacity 0.7
      transition opacity 0.4s, filter 0.4s
      margin 30px 30px
      &:hover
        opacity: 0.9
        filter: brightness(2) drop-shadow(0px 0px 3px black);
    span#footer
      display block
      margin 70px auto 0px auto
      font-size 0.7em
      color rgba(238, 238, 238, 0.7)

@keyframes slide-out
  from
    max-width 0px
  to
    max-width 100vw

@keyframes slide-in
  from
    max-width 100vw
  to
    max-width 0px


@keyframes fadein
  from
    opacity 0
  to
    opacity 1

.blur
  filter blur(5px) brightness(.4)
